<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/labeloutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Music Client"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/bindStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Bind Status:"
        android:textSize="18sp" />

    <Button
        android:id="@+id/go_button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Get Info" />

    <Button
        android:id="@+id/bindbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bind to Service" />

    <Button
        android:id="@+id/unbindservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unbind to Service" />

    <Button
        android:id="@+id/goToActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go To Second Activity" />

    <TextView
        android:id="@+id/songPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a song name(Case Sensitive): " />

    <EditText
        android:id="@+id/songInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Paisley Park"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/findSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Song" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coverArt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_launcher"
            tools:src="@tools:sample/avatars"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songNameUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Name" />

            <TextView
                android:id="@+id/artistUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artist Name" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/playClipButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Audio Clip" />

</LinearLayout>